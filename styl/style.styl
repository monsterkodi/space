#space
    position            absolute
    top 0
    left 0
    bottom 0
    right 0
    display             flex
    flex-direction      column
    transform           translateZ(0)

.folder
    box-sizing          border-box
    display             flex
    &.bordered
        box-shadow      inset 0px 0px 0px 1px #fff
    &.horz
        flex-direction  row
    &.vert
        flex-direction  column
        
.rect
    pointer-events      none
    position            absolute

#active
    box-shadow          inset 0px 0px 0px 1px #fff
#base
    box-shadow          inset 0px 0px 0px 1px #ff0
        
#tooltip
    pointer-events          none
    display                 pre
    font-family             titlebarFont
    background              #222
    padding-left            6px
    padding-right           6px
    padding-top             3px
    border-radius           3px
    font-size               18px
    position                absolute
    -webkit-user-select     none
    cursor                  default
    & .size
    & .name
        display             inline-block
        font-size           24px
    & .base
        padding-right       12px
        color               #ff0
    & .path
        color               #aaa
        font-size           12px
        padding-top         1px
    & .size
        padding-top         3px
        font-size           18px
    
.stackobj        
    flex                10 1 0
    overflow-x          auto
    overflow-y          hidden
    font-family         titlebarFont
    text-align          center
    padding-left        6px
    padding-right       6px
    padding-top         6px
        
